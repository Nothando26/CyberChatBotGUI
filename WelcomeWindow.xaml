<Window x:Class="CyberChatBotPOEPart1.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to Cyber ChatBot" Height="650" Width="1100"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Background="LightPink">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="🤖 Cyber ChatBot" 
                       FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Enter your name:" FontSize="14"/>
            <TextBox x:Name="UserNameTextBox" Width="200" Margin="0,5,0,15"/>
            <Button Content="Start Chatting" Width="150" Click="StartChatting_Click"/>
        </StackPanel>
    </Grid>
</Window>
